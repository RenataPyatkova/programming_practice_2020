import numpy as np
import matplotlib.pyplot as plt
a=np.array(25)
b=np.array(25)
c=np.array(25)
d=np.array(25)
with plt.xkcd():
    plt.pie([eval(a), eval(b), eval(c), eval(d)], labels=('В комментариях', 'В Ираке', 'В Сирии', 'В Афганистане'))
    plt.title('Где ведутся самые ожесточенные бои')

plt.show()
